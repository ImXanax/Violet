

{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "typeRoots": ["src/@types", "node_modules/@types"],                                  /* Specify multiple folders that act like './node_modules/@types'. */
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  }
}